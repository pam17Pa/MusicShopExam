@model IEnumerable<MusicShopAttempt.Data.Product>

@{
    ViewData["Title"] = "SingerFilter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Филтриране по изпълнител</h1>

<form asp-controller="Products" asp-action="SingerFilter" method="get">
    <p>
        <input type="text" name="searchString" value="@ViewData["SearchName"]" />
        <input type="submit" value="Търси" />
    </p>
</form>
@foreach (var item in Model)
{
    <div class="card">
        <img class="card-img-top" src="~/images/@item.Picture" alt="Card image">
        <div class="card-body">
            <h5 class="card-title">
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
            </h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Price) лв.</p>
        </div>
    </div>}
