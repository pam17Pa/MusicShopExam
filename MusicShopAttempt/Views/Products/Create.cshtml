@model MusicShopAttempt.Models.ProductVM

@{
    ViewData["Title"] = "Create";
}

<h1>Нов продукт</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Заглавие</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Налично количество</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PictureFile" class="control-label">Изображение</label>
                <input asp-for="PictureFile" accept="image/*" />
                <span asp-validation-for="PictureFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Статус</label>
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<MusicShopAttempt.Data.StatusType>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promo" class="control-label">Промоция</label>
                <select asp-for="Promo" asp-items="@Html.GetEnumSelectList<MusicShopAttempt.Data.PromoType>()" class="form-control"></select>
                <span asp-validation-for="Promo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holder" class="control-label">Носител</label>
                <select asp-for="Holder" asp-items="@Html.GetEnumSelectList<MusicShopAttempt.Data.HolderType>()" class="form-control"></select>
                <span asp-validation-for="Holder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Категория</label>
                <select asp-for="Category" asp-items="@Html.GetEnumSelectList<MusicShopAttempt.Data.CategoryType>()" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SingerId" class="control-label">Изпълнител</label>
                <select asp-for="SingerId" class="form-control" asp-items="@Model.Singer"></select>
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label">Жанр</label>
                <select asp-for="GenreId" class="form-control" asp-items="@Model.Genre"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
