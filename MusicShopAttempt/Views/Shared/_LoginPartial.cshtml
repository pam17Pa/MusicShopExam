@using Microsoft.AspNetCore.Identity
@using MusicShopAttempt.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
 @if (SignInManager.IsSignedIn(User))
  {
    <li class="nav-item">
       <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-user-o" aria-hidden="true"></i> Здравейте, @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
       <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
          <button type="submit" class="nav-link btn btn-link text-light">Излизане <i class="fa fa-sign-out" aria-hidden="true"></i></button>
       </form>
    </li>
  }
 else
 {
    <li class="nav-item">
       <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li class="nav-item">
       <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Вход <i class="fa fa-sign-in" aria-hidden="true"></i></a>
    </li>
    <li class="nav-item">
       <a class="nav-link" asp-controller="OrderDetails" asp-action="Index"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a>
    </li>
 }
</ul>
