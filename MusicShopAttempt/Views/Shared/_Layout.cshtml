@inject SignInManager<User> signInManager;
@inject UserManager<User> userInManager;
@using Microsoft.AspNetCore.Identity;
@using MusicShopAttempt.Data;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Хармония</title>
    <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link asp-append-version="true" rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img  id ="logo"src="~/images/Logo.png" /> </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav nav-pills flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Продукти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Genres" asp-action="Index">Жанрове</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Singers" asp-action="Index">Изпълнители</a>
                        </li>
                        @if (signInManager.IsSignedIn(User) && User.IsInRole(Role.Admin.ToString()))
                        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">Поръчки</a>
            </li>
}
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div>
        <img id="leftBanner" src="~/images/banner1.jpg" />
        <img id="rightBanner" src="~/images/banner2.jpg" />
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <br />
    <br />
    <br />
    <br />

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Хармония &nbsp;&nbsp;&nbsp; <a href="https://twitter.com/ateezofficial?lang=bg"><i class="fa-brands fa-2x fa-twitter bg-info"></i></a> &nbsp;&nbsp;&nbsp; <a href="https://www.instagram.com/ateez_official_/?hl=bg"><i class="fa-brands fa-2x fa-instagram bg-info"></i></a> &nbsp;&nbsp;&nbsp; <a href="https://open.spotify.com/artist/68KmkJeZGfwe1OUaivBa2L"><i class="fa-brands fa-2x fa-spotify bg-info"></i></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
