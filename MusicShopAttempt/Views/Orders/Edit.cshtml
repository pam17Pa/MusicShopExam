@model MusicShopAttempt.Data.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактиране</h1>

<h4>Поръчка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="OrderedOn" class="control-label">Дата на поръчване</label>
                <input asp-for="OrderedOn" class="form-control" readonly />
                <span asp-validation-for="OrderedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label">Дължима сума</label>
                <input asp-for="Total" class="form-control" readonly/>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Finalised" readonly/> @Html.DisplayNameFor(model => model.Finalised)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Потребител</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" readonly></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa fa-2x fa-reply" aria-hidden="true"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
