@model MusicShopAttempt.Data.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детайли</h1>

<div>
    <h4>Поръчка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата на поръчване
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderedOn)
        </dd>
        <dt class="col-sm-2">
            Дължима сума
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
           Приключена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Finalised)
        </dd>
        <dt class="col-sm-2">
            Потребител
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index"><i class="fa fa-2x fa-reply" aria-hidden="true"></i></a>
</div>
